#include <string>
#include <gtest/gtest.h>
extern "C" {
#include "libwebvtt/cuetext.c"
}

class CueTextTokenizerTest : public ::testing::Test
{
  public:
    virtual void SetUp() {
      webvtt_init_string( &res );
    }
    
    virtual void TearDown() {
      webvtt_release_string( &res );
    }
    
    webvtt_status GetStatus() const {
      return status;
    }
    
    webvtt_token_state GetState() const {
      return state;
    }
    
    const char * ParsedText() const {
      return webvtt_string_text( &res );
    }
    
    char GetCurrentChar() const {
      return *pos;
    }
    
  protected:
    webvtt_string res;
    webvtt_token_state state;
    webvtt_status status;
    const char *pos;
};
